{
  "swagger": "2.0",
  "info": {
    "title": "MaileHereko API",
    "version": "1.0.0",
    "description": ""
  },
  "host": "maile-hereko-api.herokuapp.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register user",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Credentials"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created user",
            "schema": {
              "$ref": "#/definitions/Success"
            }
          },
          "400": {
            "description": "Already email used",
            "schema": {
              "$ref": "#/definitions/EmailAlready"
            }
          },
          "500": {
            "description": "Some error",
            "schema": {
              "$ref": "#/definitions/FailedRegister"
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Log in user",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Credentials"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "description": "Login success",
            "schema": {
              "$ref": "#/definitions/SuccessLogin"
            }
          },
          "400": {
            "description": "Incorrect user data",
            "schema": {
              "$ref": "#/definitions/IncorrectCredentials"
            }
          },
          "500": {
            "description": "Some error",
            "schema": {
              "$ref": "#/definitions/FailedLogin"
            }
          }
        }
      }
    },
    "/api/auth/me": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Get user data",
        "description": "",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "401": {
            "description": "Access denied",
            "schema": {
              "$ref": "#/definitions/IncorrectAccessToken"
            }
          },
          "404": {
            "description": "User not found",
            "schema": {
              "$ref": "#/definitions/NotFoundUser"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "example@gmail.com"
        },
        "movies_ids": {
          "type": "array",
          "example": [],
          "items": {}
        },
        "tv_shows_ids": {
          "type": "array",
          "example": [],
          "items": {}
        },
        "suggestions_ids": {
          "type": "array",
          "example": [],
          "items": {}
        },
        "manual_suggestions_ids": {
          "type": "array",
          "example": [],
          "items": {}
        }
      }
    },
    "Credentials": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "example@gmail.com"
        },
        "password": {
          "type": "string",
          "example": "some_password_value"
        }
      }
    },
    "Success": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "example": true
        }
      }
    },
    "Failed": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "example": false
        }
      }
    },
    "SuccessLogin": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "example": true
        },
        "token": {
          "type": "string",
          "example": "access_token_example"
        },
        "user": {
          "$ref": "#/definitions/User"
        }
      }
    },
    "EmailAlready": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "example": false
        },
        "message": {
          "type": "string",
          "example": "User with such an email already exists"
        }
      }
    },
    "FailedRegister": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "example": false
        },
        "message": {
          "type": "string",
          "example": "Failed to register. Try again"
        }
      }
    },
    "FailedLogin": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "example": false
        },
        "message": {
          "type": "string",
          "example": "Failed to login. Try again"
        }
      }
    },
    "InvalidEmail": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "example": false
        },
        "email": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "example": "Invalid email format"
            }
          }
        }
      }
    },
    "IncorrectCredentials": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "example": false
        },
        "message": {
          "type": "string",
          "example": "Incorrect email or password"
        }
      }
    },
    "InvalidPassword": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "example": false
        },
        "password": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "example": "Password must be at least <count> characters long"
            }
          }
        }
      }
    },
    "IncorrectAccessToken": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "example": false
        },
        "message": {
          "type": "string",
          "example": "Access denied"
        }
      }
    },
    "NotFoundUser": {
      "type": "object",
      "properties": {
        "ok": {
          "type": "boolean",
          "example": false
        },
        "message": {
          "type": "string",
          "example": "User not found"
        }
      }
    }
  }
}